@model IEnumerable<Modelo.Modelo.TablasCatalogo.BancoProveedor>

@{
    ViewData["Title"] = "Lista de bancos";
}

<div id="contenedorModal"></div>
<div class="col-md-12 d-flex flex-column">
    <div class="align-self-end">
        <p>
            <button type="button" class="btn btn-primary">
                <a class="etiqueta-en-boton" asp-action="Create">Agregar banco</a>
            </button>
        </p>
    </div>
</div>
<div class="tabla-contenedor">
    <table class="table table-hover">
    <thead class="tabla-columna-center-text">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th>
                Opciones
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="columna-center-text">
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td class="tabla-columna-center-text">
                <button type="button" class="btn btn-primary">
                    <a class="etiqueta-en-boton" asp-action="Edit" asp-route-id="@item.IdBanco">Editar banco</a>
                </button>
                <button type="button" class="btn btn-primary">
                    <a class="etiqueta-en-boton" asp-action="Details" asp-route-id="@item.IdBanco">Ver información detallada</a>
                </button>
                <button type="button" class="btn btn-primary"  data-toggle="boostrap-modal" data-target="#DeleteBank" data-url ="@Url.Action($"Delete/{@item.IdBanco}")">
                    Dar Baja
                    @*<a name="btn_darbaja" class="etiqueta-en-boton" >Dar de baja</a>*@
                    @*<a asp-action="Delete" asp-route-id="@item.IdBanco" class="etiqueta-en-boton" >Dar de baja</a>*@
                </button>
            </td>
        </tr>
}
    </tbody>
</table>
