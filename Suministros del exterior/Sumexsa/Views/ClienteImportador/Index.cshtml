@model IEnumerable<Modelo.Modelo.TablasCatalogo.ClienteImportador>

@{
    ViewData["Title"] = "Lista de importadores";
    int Id = 0;
}  
<div id="contenedorModal"></div>
<div id ="contentModalLayout"></div>
<div class="col-md-12 d-flex flex-column">
    <div class="align-self-end">
        <p>
            <button type="button" class="btn btn-primary">
                <a class="etiqueta-en-boton" asp-action="Create">Agregar importador</a>
            </button>
        </p>
    </div>
</div>

<div class="tabla-contenedor">
    <table class="table table-hover">
        <thead class="tabla-columna-center-text">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Ruc_Cedula)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Direccion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telefono)
                </th>
                <th>
                    Opciones
                </th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr class="columna-center-text">
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ruc_Cedula)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Direccion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefono)
                </td>
                <td class="tabla-columna-center-text">
                    <button type="button" class="btn btn-primary">
                        <a class="etiqueta-en-boton" asp-action="Edit" asp-route-id="@item.Idclienteimportador">Editar importador</a>
                    </button>
                    <button type="button" class="btn btn-primary">
                        <a class="etiqueta-en-boton" asp-action="Details" asp-route-id="@item.Idclienteimportador">Ver informacion detallada</a>
                    </button>
                    <button type="button" class="btn btn-primary" data-toggle="boostrap-modal" data-target="#DeleteImportador" data-url="@Url.Action($"Delete/{@item.Idclienteimportador}")">
                        Dar Baja
                    </button>
                </td>
            </tr>
    }
    </tbody>
    </table>
</div>