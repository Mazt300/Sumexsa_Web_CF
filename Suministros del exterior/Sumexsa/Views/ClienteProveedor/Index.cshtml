@model IEnumerable<Modelo.Modelo.TablasCatalogo.ClienteProveedor>
@{
    ViewData["Title"] = "Lista cliente extranjero";
    int Id = 0;
}  
<form asp-controller="ClienteExtranjero">
    <div class="col-md-12 d-flex flex-column">
    <div class="align-self-end">
        <p>
            <button type="button" class="btn btn-primary">
                <a class="etiqueta-en-boton" asp-action="Create">Agregar cliente</a>
            </button>
        </p>
    </div>
</div>
</form>
<div class="tabla-contenedor">
    <table class="table table-hover">
        <thead class="tabla-columna-center-text">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pais)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ciudad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th>
                Opciones
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="columna-center-text">
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pais)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ciudad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
             <td class="tabla-columna-center-text">
                    <button type="button" class="btn btn-primary">
                        <a class="etiqueta-en-boton" asp-action="Edit" asp-route-id="@item.IdClienteProveedor">Editar cliente</a>
                    </button>
                    <button type="button" class="btn btn-primary">
                        <a class="etiqueta-en-boton" asp-action="Details" asp-route-id="@item.IdClienteProveedor">Ver información detallada</a>
                    </button>
                    <button type="submit" class="btn btn-primary"  data-toggle="modal" data-target="#Modal">
                        <a class="etiqueta-en-boton" >Dar de baja</a>
                        @{
                              int valor = @item.IdClienteProveedor;
                         }
                    </button>
             </td>
        </tr>
             
        @*Aqui estara la funcionalidad para pasar los parametros de cada registro a funciones en C#*@
             <form asp-controller="ClienteProveedor">
                <div class="container">
                  <!-- Espacio modal -->
                  <div class="modal fade" id="Modal" role="dialog">
                    <div class="modal-dialog">
                      <!-- Modal Contenido interno-->
                      <div class="modal-content modal-content-estilo">
                        <div class="modal-header  d-flex flex-column">
                            <button type="button" class="close align-self-end" data-dismiss="modal">&times;</button>
                           <div class="align-self-center">
                            <h4 clas>¿Estas seguro de dar baja?</h4>
                           </div>
                        </div>
                        <div class="modal-body-custom">
                           <button name="btn_confirmar" type="submit" asp-action="Redireccionar" asp-route-id=@valor class="btn-primary button-confirmacion-si">Si</button>
                           <button name="btn_cancelar" class="btn-danger button-confirmacion-no">No</button>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
            </form> 
}
    </tbody>
</table>
</div>
