@model Modelo.Modelo.TablasCatalogo.BancoInternacional

 <!-- Espacio modal -->
<form>
  <div class="modal fade" id="DeleteBank" role="dialog">
   <div class="modal-dialog">
     <!-- Modal Contenido interno-->
     <div class="modal-content modal-content-estilo">
       <div class="modal-header  d-flex flex-column">
           <button type="button" class="close align-self-end" data-dismiss="modal">&times;</button>
          <div class="align-self-center">
           <h4 clas>¿Estas seguro de dar baja?</h4>
          </div>
       </div>
       <div class="align-self-center">
            <h5>@Model.Nombre</h5>
       </div>
       <div class="modal-body-custom">
          <button name="btn_confirmar" type="submit" asp-action="Redireccionar" asp-route-id="@Model.IdBancoInternacional" class="btn-primary button-confirmacion-si">Si</button>
          <button name="btn_cancelar" data-dismiss="modal" class="btn-danger button-confirmacion-no">No</button>
       </div>
     </div>
   </div>
 </div>
</form>
