@model IEnumerable<Modelo.Modelo.TablasCatalogo.CuentaBancariaCliente>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="contenedorModal"></div>
<div class="col-md-12 d-flex flex-column">
    <div class="align-self-end">
        <p>
            <button type="button" class="btn btn-primary">
                <a class="etiqueta-en-boton" asp-action="Create">Agregar banco</a>
            </button>
        </p>
    </div>
</div>
<div class="tabla-contenedor">
    <table class="table table-hover">
    <thead class="tabla-columna-center-text">>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cuenta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Moneda)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Swift)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdCliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdBanco)
            </th>
            <th>
                Opciones
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cuenta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Moneda)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Swift)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdBanco)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdBancoP_ClienteE">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdBancoP_ClienteE">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdBancoP_ClienteE">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
